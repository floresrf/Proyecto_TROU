<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_TROU.MainPage"
             BackgroundColor="#777">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label 
                FontSize="35"
                TextColor="#fff"
                FontAttributes="Bold"     
                FontFamily="sans-serif-black"
                HorizontalTextAlignment="Center"
                Text="Hola Usuario"/>
            <Label 
                FontSize="32"
                TextColor="#fff"
                FontAttributes="Bold"
                FontFamily="sans-serif-black"
                HorizontalTextAlignment="Center"
                Text="Estado Actual"/>
            <Label 
                FontSize="32"
                TextColor="#f00"
                FontAttributes="Bold"
                FontFamily="sans-serif-black"
                HorizontalTextAlignment="Center"
                Text="Cerrado"/>
            <Button
                CornerRadius="75"
                WidthRequest="150"
                HeightRequest="150"
                BackgroundColor="#fff"
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" />
            
            <AbsoluteLayout 
                HorizontalOptions="Center" 
                Margin="80">
                
                <Rectangle
                    Fill="#ccc"
                    RadiusX="30"
                    WidthRequest="400"
                    HeightRequest="300"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize" />
                
                <AbsoluteLayout>

                    <Rectangle
                        Fill="#f00"
                        RadiusX="30"
                        WidthRequest="100"
                        HeightRequest="300"
                        AbsoluteLayout.LayoutBounds="0.5, 0.5" />

                </AbsoluteLayout>

                <Label 
                    Text="Historial"
                    FontSize="24"
                    TextColor="#000"                    
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="0.5, 0.05"/>
                
            </AbsoluteLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
